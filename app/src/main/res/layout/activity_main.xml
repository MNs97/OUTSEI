<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:gravity="bottom"
            android:background="@drawable/outsei"/>
        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textSize="25dp"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:gravity="bottom"
            android:textColor="#2ca9e1"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="13dp"
            android:background="@drawable/info"
            android:gravity="bottom"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2ca9e1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2ca9e1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/id1_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="#ffffff"
            android:src="@drawable/home"/>
        <ImageButton
            android:id="@+id/id4_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="#ffffff"
            android:src="@drawable/preparation"/>
        <ImageButton
            android:id="@+id/id5_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="#ffffff"
            android:src="@drawable/memo"/>
        <ImageButton
            android:id="@+id/id6_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="#ffffff"
            android:src="@drawable/thought"/>
    </LinearLayout>
</LinearLayout>