<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#c85554">
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/outsei"/>
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textSize="25dp"
            android:text="@string/app_name"
            android:textColor="#383c3c"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:background="#fff8dc">

        <TextView
            android:id="@+id/warming_txt"
            android:layout_width="59dp"
            android:layout_height="103dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#88b5d3"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/id1_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#88b5d3"
            android:scaleType="centerInside"
            android:src="@drawable/book" />
        <ImageButton
            android:id="@+id/id2_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="#88b5d3"
            android:src="@drawable/inspiration"/>
        <ImageButton
            android:id="@+id/id3_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="#88b5d3"
            android:src="@drawable/book"/>
        <ImageButton
            android:id="@+id/id4_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="#88b5d3"
            android:src="@drawable/book"/>
        <ImageButton
            android:id="@+id/id5_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="#88b5d3"
            android:src="@drawable/book"/>
        <ImageButton
            android:id="@+id/id6_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="#88b5d3"
            android:src="@drawable/book"/>
    </LinearLayout>
</LinearLayout>