<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#2ca9e1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#FBFFB9"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/id1_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="#FBFFB9"
            android:src="@drawable/home"/>
        <ImageButton
            android:id="@+id/id4_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="#FBFFB9"
            android:src="@drawable/preparation"/>
        <ImageButton
            android:id="@+id/id5_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="#FBFFB9"
            android:src="@drawable/memo"/>
        <ImageButton
            android:id="@+id/id6_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="#FBFFB9"
            android:src="@drawable/thought"/>
    </LinearLayout>
</selector>